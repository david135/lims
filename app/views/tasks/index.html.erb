<% content_for :sidebar do %>
  <h1>Listing tasks</h1>
<% end %>
<h2>(temporary page?)</h2>
<table id="tasks" class="datatable table table-striped table-bordered">
  <caption><h3><%= "Tasks" %></h3></caption>
  <thead>
    <tr>
      <th>Event</th>
      <th>Title</th>
      <th>Description</th>
      <th>Status</th>
      <th>Start Time</th>
      <th>End Time</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr <%== success_class_if_match(task.status, 'Full') %>>
        <td><%= link_to task.event.title, task.event %></td>
        <td><%= link_to task.title, task %></td>
        <td><%= truncate(task.description) %></td>
        <td><span <%== task_label_class(task) %>><%= task.status %></span></td>
        <td><%= task.start_time %></td>
        <td><%= task.end_time %></td>
        <td><%= table_button_link 'Edit', edit_task_path(task) if can? :edit, task %></td>
      </tr>
    <% end %>
  </tbody>
</table>
